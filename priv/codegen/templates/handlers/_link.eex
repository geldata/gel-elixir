<%= if @link.is_optional do %>
with link when not is_nil(link) <- <%= @opts[:variable] %>["<%= @link.name %>"] do
    <%= Gel.EdgeQL.Generator.Handler.handle(@link.type, Keyword.merge(@opts, variable: "link")) %>
end
<% else %>
    <% variable = Gel.EdgeQL.Generator.Handler.Utils.variable(@link.type, "link") %>
with <%= variable %> <- <%= @opts[:variable] %>["<%= @link.name %>"] do
    <%= Gel.EdgeQL.Generator.Handler.handle(@link.type, Keyword.merge(@opts, variable: variable)) %>
end
<% end %>
